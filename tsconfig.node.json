{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",

    /* 严格模式 */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* 模块解析 */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Node.js 类型支持 */
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}
